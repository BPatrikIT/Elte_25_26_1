<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Frame BackgroundColor="CadetBlue">
                <Label Text="Word Game!" FontSize="32"
                    HorizontalOptions="Center" />
            </Frame>

            <Label x:Name="_currentWordLabel"
                   Text="Current Word: "
                   FontSize="18" FontAttributes="Bold"/>
            <Label x:Name="_scoreLabel"
                Text="Score: "
                FontSize="14" FontAttributes="Bold"/>

            <Entry x:Name="_wordEntry" />

            <Button Text="Submit" Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
