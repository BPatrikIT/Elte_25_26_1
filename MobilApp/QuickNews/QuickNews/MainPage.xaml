<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickNews.MainPage"
             Title="Keresés">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Entry -->
        <Frame Grid.Row="0" BackgroundColor="CornflowerBlue">
            <StackLayout>
                <Label Text="Gyors Hir!" FontSize="Title" HorizontalOptions="Center" />
                <Entry x:Name="_searchEntry" Completed="_searchEntry_Completed" />
            </StackLayout>
        </Frame>

        <!-- Search results -->
        <ScrollView Grid.Row="1">
            <StackLayout x:Name="_searchREsultsList" />
        </ScrollView>
    </Grid>

</ContentPage>
