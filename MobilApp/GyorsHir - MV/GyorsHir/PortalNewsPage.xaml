<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GyorsHir.PortalNewsPage"
             Title="PortalNewsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="_titleLabel" VerticalOptions="Center" HorizontalOptions="Center"
           FontSize="Large" />

        <ScrollView Grid.Row="1">
            <StackLayout x:Name="_newsList">

            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>