<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GyorsHir.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame BackgroundColor="LightSkyBlue" Padding="24">
            <StackLayout>
                <Label Text="Gyors Hír!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" />
                <Entry x:Name="_searchEntry" Completed="_searchEntry_Completed"></Entry>
            </StackLayout>
        </Frame>

        <ScrollView Grid.Row="1">
            <StackLayout x:Name="_searchResultsList">
                
            </StackLayout>
        </ScrollView>
        
    </Grid>

</ContentPage>
